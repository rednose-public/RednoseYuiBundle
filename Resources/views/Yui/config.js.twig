{% autoescape %}
    YUI_config = {
        allowRollup: true,

        fetchCSS: true,

        base: '{{ asset(null) }}cdn/yui3/build/',
        comboBase: '{{ asset(null) }}cdn/combo?',
        root: 'cdn/yui3/build/',

        // Don't log any messages from these modules
        debug: false,

        {% if app.environment == 'dev' %}
            combine: false,
            filter: 'raw',
        {% else %}
            combine  : true,
        {% endif %}

        groups: {
            gallery: {
                base: '{{ asset(null) }}cdn/yui3-gallery/build/',
                root: 'cdn/yui3-gallery/build/',

                {% if app.environment == 'dev' %}
                    combine: false,
                    filter: 'raw',
                {% else %}
                    combine  : true,
                {% endif %}

                patterns: {
                    'gallery-': {},
                    'lang/gallery-': {},
                    'gallerycss-': { type: 'css' }
                }
            }

            {% for group in groups %}
                , '{{ group.name }}': {
                    base: '{{ asset(null) }}{{ group.root }}/build/',
                    root: '{{ group.root }}/build/',

                    {% if app.environment == 'dev' %}
                        combine: false,
                        debug : true,
                        filter: 'debug'
                    {% else %}
                        combine: true
                    {% endif %}

                    {% if group.metadata %}
                        , modules: {{ group.metadata|raw }}
                    {% endif %}
                }
            {% endfor %}
        }
    }

{% endautoescape %}
